@page
@model WorkflowTesting
@{
    ViewData["Title"] = "Microsoft Rules Engine Testing Page";
}
@using RulesEngineEditor.Pages

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div>
        <label for="inputProducts">Input Products:</label>
        <input type="text" id="inputProducts" name="inputProducts" />
    </div>
    <div>
        <label for="workflowRules">Workflow Rules:</label>
        <input type="text" id="workflowRules" name="workflowRules" />
    </div>
    <div>
        <label for="presetRules">Preset Ruleset:</label>
        <select id="presetRules" name="presetRules">
            @foreach (var presetRule in Model.PresetRules)
            {
                <option value="@presetRule.Id">@presetRule.DisplayText</option>
            }
        </select>
    </div>
    <div>
        <label for="presetInputs">Preset Inputs:</label>
        <select id="presetInputs" name="presetInputs">
            @foreach (var presetInput in Model.PresetInputs)
            {
                <option value="@presetInput.Id">@presetInput.DisplayText</option>
            }
        </select>
    </div>
    <button type="submit">Submit</button>
</form>

@if (Model.Output != null)
{
    <h2>Output:</h2>
    <ul>
        @foreach (var product in Model.Output.Products)
        {
            <li>@product.Name - @product.Price (@product.BasePrice)</li>
        }
    </ul>
}